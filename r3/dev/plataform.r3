#map 'map1

:gettilea | x y -- t
	4 >> 3 - swap 4 >> swap
	32 * + 2 << map + 8 + ;

:gettile | x y -- t
	4 >> 3 - swap 4 >> swap
	32 * + 2 << map + 8 + @ ;

:tile
	$3 and " O:$" + c@ emit ;

:drawmap
	$ffffff 'ink !
	0 3 gotoxy
	map 8 +
	32 ( 1?
		32 ( 1?
			rot @+ tile rot rot
			1 - ) drop
		cr
		1 - ) 2drop ;

|--------- PLAYER
#ddx
#dx #dy
#xp #yp

:roof? | -- techo?
	xp 16 >> yp 16 >> -$8 + gettile ;

:floor? | -- piso?
	xp 16 >> yp 16 >> $10 + gettile ;

:wall? | dx -- wall?
	xp 16 >> + yp 16 >> gettile ;

:jump
	floor? 0? ( drop
		0.8 'dy +!
		roof? 1? ( dy -? ( 0 'dy ! ) drop ) drop
		; ) drop
	0 'dy !
	yp $fff00000 and 'yp ! | fit y to map
	key
	<up> =? ( -10.0 'dy ! )
	drop
	;

:goleft
	$10 wall? 0? ( drop ; ) drop
	xp $fff00000 and 'xp !
	drop 0 ;

:gorigth
	-$8 wall? 0? ( drop ; ) drop
	xp $fff00000 and 'xp !
	drop 0 ;

:player
	key
	<le> =? ( -0.25 'ddx ! )
	<ri> =? ( 0.25 'ddx ! )
	>le< =? ( 0 'ddx ! )
	>ri< =? ( 0 'ddx ! )
 	drop

    dx ddx 0? ( swap 0.8 *. )
	+ 3.0 min -3.0 max
	+? ( goleft )
	-? ( gorigth )
	'dx !
	jump

	dx 'xp +!
	dy 'yp +!
	;

:drawplayer
	player
	xp 16 >> yp 16 >> atxy
	$ff00ff 'ink !
	"X" print
	;

:resetplayer
	0 'ddx !
	0 'dx ! 0 'dy !
	64.0 'xp !
	480.0 'yp !
	;

|---------- GAME
:game
	cls home
	$ff00 'ink !
	"test plataform" print

	drawmap
	drawplayer

	key
	>esc< =? ( exit )
	drop
	;

:ram
	mark
	fontj2
	resetplayer
	;

